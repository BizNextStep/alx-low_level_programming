CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC := main.c school.c
OBJ := $(SRC:.c=.o)
NAME := school
RM := rm -f

.PHONY: all clean oclean fclean re

all: $(NAME)
$(NAME): $(OBJ)
    @echo "[Building $@]"
    $(CC) $(CFLAGS) -o $@ $(OBJ)

%.o: %.c
    $(CC) $(CFLAGS) -c -o $@ $<

clean:
    $(RM) *~ $(NAME)

oclean:
    $(RM) $(OBJ)

fclean: clean oclean

re: fclean all
